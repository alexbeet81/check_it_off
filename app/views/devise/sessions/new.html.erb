<body class="session-background">
<div class="image-div text-center">
<%= image_tag "IMG_9869.PNG", alt: "logo_checkitoff", style:"width:200px; margin: 40px;" %>
</div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  placeholder: "email",
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: false,
                  placeholder: "password",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center session-button">
      <%= f.button :submit, "Log in", class:"btn-flat" %>
    </div>
  <% end %>
  <div class="shared-link-space">
    <%= render "devise/shared/links" %>
  </div>
</body>
